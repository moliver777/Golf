<table>
	<tr>
		<th class="title" colspan="4">PRO LEADERBOARD</th>
	</tr>
	<tr>
		<th class="small"></th>
		<th class="big">NAME</th>
		<th>SCORE</th>
		<th>+/- <span style="font-size:14px;position:relative;bottom:2px;">(par <%= @pro_par %>)</span></th>
	</tr>
	<% @pros.each_with_index do |pro,i| %>
		<tr>
			<% if pro.score > 0 %>
				<% if pro.score == @prev_score %>
					<td>T<%= @prev_position %></td>
				<% else %>
					<% if @pros[i+1] && pro.score == @pros[i+1].score %>
						<td>T<%= i+1 %></td>
					<% else %>
						<td><%= i+1 %></td>
					<% end %>
					<% @prev_score = pro.score %>
					<% @prev_position = i+1 %>
				<% end %>
				<td><%= pro.name %></td>
				<td><%= pro.score %></td>
				<td><%= pro.score-@pro_par %></td>
			<% else %>
				<td>-</td>
				<td><%= pro.name %></td>
				<td>-</td>
				<td>-</td>
			<% end %>
		</tr>
	<% end %>
</table>

<script type="text/javascript">
	$(document).ready(function() {
		$("div#content table").fadeIn();
		setTimeout(function() {
			$("div#content table").fadeOut(function() {
				$("div#content").load("/get_teams");
			});
		},<%= @interval %>);
	});
</script>
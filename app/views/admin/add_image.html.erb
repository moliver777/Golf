<!-- Header -->
<div id="header">
	<div class="shell">
		
		<div id="head">
			<h1><a href="#">Weybrook Park Pro-Am Admin</a></h1>
		</div>
		
		<!-- Navigation -->
		<div id="navigation">
			<ul>
			    <li><a href="/admin"><span>Team Management</span></a></li>
			    <li><a href="/"><span>View Leaderboard</span></a></li>
			</ul>
		</div>
		<!-- End Navigation -->
		
	</div>
</div>
<!-- End Header -->

<!-- Content -->
<div id="content" class="shell">
	<%= form_for("team_image", method: "post") do |f| %>
		<table>
			<tr>
				<td><%= @team.pro.name %></td>
				<td><%= @team.amateur_1 %></td>
				<td><%= @team.amateur_2 %></td>
				<td><%= @team.amateur_3 %></td>
			</tr>			
			<tr>
				<td colspan="3"><%= f.file_field :image_file, :onchange => "checkFile(this,['JPG','JPEG','PNG'])" %></td>
				<td><%= f.submit %></td>
			</tr>
		</table>
	<% end %>
</div>
<!-- End Content -->
